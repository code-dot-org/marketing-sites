/**
 * Build config to allow typescript declarations to land in the correct dist folder. Without this, declarations go in
 * dist/src/button/index.d.ts whereas we want dist/button/index.d.ts
 */
{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": "../",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "exclude": ["**/__tests__/*", "**/stories/*"]
}
