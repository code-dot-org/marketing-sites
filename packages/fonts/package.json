{
  "name": "@code-dot-org/fonts",
  "version": "0.0.0-alpha.0",
  "homepage": "https://github.com/code-dot-org/code-dot-org/blob/staging/frontend/packages/fonts/#readme",
  "bugs": {
    "url": "https://github.com/code-dot-org/code-dot-org/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/code-dot-org/code-dot-org.git",
    "directory": "frontend/packages/fonts"
  },
  "license": "SEE LICENSE IN LICENSE",
  "exports": {
    ".": {
      "types": {
        "import": "./dist/esm/index.d.mts",
        "require": "./dist/cjs/index.d.ts"
      },
      "import": "./dist/esm/index.mjs",
      "require": "./dist/cjs/index.js"
    },
    "./index.css": "./dist/index.css",
    "./locales/*": "./dist/locales/*",
    "./FontLoader": {
      "types": {
        "import": "./dist/esm/react/FontLoader/index.d.mts",
        "require": "./dist/cjs/react/FontLoader/index.d.ts"
      },
      "import": "./dist/esm/react/FontLoader/index.mjs",
      "require": "./dist/cjs/react/FontLoader/index.js"
    },
    "./loader": {
      "types": {
        "import": "./dist/esm/loader/index.d.mts",
        "require": "./dist/cjs/loader/index.d.ts"
      },
      "import": "./dist/esm/loader/index.mjs",
      "require": "./dist/cjs/loader/index.js"
    }
  },
  "files": [
    "*.scss"
  ],
  "scripts": {
    "build": "NODE_OPTIONS='--max-old-space-size=8192' tsup",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "prettier": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "stylelint": "stylelint src/**/*.{css,scss,sass}",
    "stylelint:fix": "yarn run stylelint --fix"
  },
  "prettier": "@code-dot-org/lint-config/prettier/index.mjs",
  "stylelint": {
    "extends": "@code-dot-org/lint-config/stylelint/index.mjs"
  },
  "devDependencies": {
    "@fontsource-variable/figtree": "^5.1.2",
    "@fontsource-variable/noto-sans": "^5.1.1",
