    "@fontsource-variable/noto-sans-armenian": "^5.1.1",
    "@fontsource-variable/noto-sans-bengali": "^5.1.1",
    "@fontsource-variable/noto-sans-devanagari": "^5.1.1",
    "@fontsource-variable/noto-sans-georgian": "^5.1.1",
    "@fontsource-variable/noto-sans-hebrew": "^5.1.1",
    "@fontsource-variable/noto-sans-jp": "^5.1.1",
    "@fontsource-variable/noto-sans-kannada": "^5.1.1",
    "@fontsource-variable/noto-sans-khmer": "^5.1.1",
    "@fontsource-variable/noto-sans-kr": "^5.1.1",
    "@fontsource-variable/noto-sans-sc": "^5.1.1",
    "@fontsource-variable/noto-sans-sinhala": "^5.1.1",
    "@fontsource-variable/noto-sans-tamil": "^5.1.1",
    "@fontsource-variable/noto-sans-tc": "^5.1.1",
    "@fontsource-variable/noto-sans-telugu": "^5.1.1",
    "@fontsource-variable/noto-sans-thaana": "^5.1.1",
    "@fontsource-variable/noto-sans-thai": "^5.1.1",
    "@fontsource/barlow-semi-condensed": "^5.1.1",
    "@fontsource/noto-sans-jp": "^5.1.1",
    "@fontsource/noto-sans-kr": "^5.1.1",
    "@fontsource/noto-sans-math": "^5.1.1",
    "@fontsource/noto-sans-myanmar": "^5.1.1",
    "@fontsource/noto-sans-sc": "^5.1.1",
    "@fontsource/noto-sans-tc": "^5.1.1",
    "eslint": "^9.16.0",
    "prettier": "3.3.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "sass": "^1.85.0",
    "stylelint": "^16.14.1",
    "tsup": "^8.3.6"
  },
  "peerDependencies": {
    "react": ">=17",
    "react-dom": ">=17"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  }
}
