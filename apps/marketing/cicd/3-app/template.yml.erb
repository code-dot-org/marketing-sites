  # New Redis resources with "V2" suffix to avoid conflicts with existing resources
  # This allows CloudFormation to create new resources in the shared VPC while leaving
  # old resources intact until they can be safely cleaned up later
  RedisSecurityGroupV2:
    Type: AWS::EC2::SecurityGroup
    Properties:
      GroupDescription: Redis access from ECS (Shared VPC)
      VpcId:
        Fn::ImportValue: MarketingSitesRegionInfrastructure-VpcId
      SecurityGroupIngress:
        - IpProtocol: tcp
          FromPort: 6379
          ToPort: 6379
          SourceSecurityGroupId: !Ref FargateServiceSecurityGroup
      Tags:
        - Key: Name
          Value: !Sub "marketing-sites-${SubdomainName}-${EnvironmentType}-redis-sg-v2"

  RedisSubnetGroupV2:
    Type: AWS::ElastiCache::SubnetGroup
    Properties:
      CacheSubnetGroupName: !Sub "marketing-sites-${SubdomainName}-${EnvironmentType}-v2"
      Description: Marketing Sites Redis Cache Subnet Group (Shared VPC)
      SubnetIds:
<% selected_azs.each_with_index do |_, index| %>
        - Fn::ImportValue: MarketingSitesRegionInfrastructure-VpcPrivateSubnet<%= index %>Id
<% end %>
      Tags:
        - Key: Name
          Value: !Sub "marketing-sites-${SubdomainName}-${EnvironmentType}-subnet-group-v2"

  # This enables keyspace notifications for Redis, which is required for the Next.js caching.
  # See: https://github.com/trieb-work/nextjs-turbo-redis-cache
  RedisParameterGroupV2:
    Type: AWS::ElastiCache::ParameterGroup
    Properties:
      CacheParameterGroupFamily: redis7
      Description: Enable keyspace notifications (Shared VPC)
      Properties:
        notify-keyspace-events: Exe
      Tags:
        - Key: Name
          Value: !Sub "marketing-sites-${SubdomainName}-${EnvironmentType}-params-v2"

  RedisCluster:
    Type: AWS::ElastiCache::ReplicationGroup
    Properties:
      ReplicationGroupDescription: Marketing Sites redis full router page and internal data cache replication group (Shared VPC)
      Engine: redis
      ReplicationGroupId: !Sub "marketing-sites-${SubdomainName}-${EnvironmentType}-v2"
      CacheParameterGroupName: !Ref RedisParameterGroupV2
      EngineVersion: 7.1
      CacheNodeType:
        Fn::If:
          - IsProductionEnvironment
          - cache.r7g.xlarge
          - cache.t3.medium
      NumNodeGroups: 1
      ReplicasPerNodeGroup: 1
      SecurityGroupIds:
        - !Ref RedisSecurityGroupV2
      CacheSubnetGroupName: !Ref RedisSubnetGroupV2
      MultiAZEnabled: true
      TransitEncryptionEnabled: true
      AtRestEncryptionEnabled: true
      AutomaticFailoverEnabled: true
      AutoMinorVersionUpgrade: true
      PreferredMaintenanceWindow: "sun:05:00-sun:06:00"
      Tags:
        - Key: Name
          Value: !Sub "marketing-sites-${SubdomainName}-${EnvironmentType}-cluster-v2"

  #######################
  # End Redis Resources #
  #######################

